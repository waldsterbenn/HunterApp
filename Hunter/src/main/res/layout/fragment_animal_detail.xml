<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/fragment_animal_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Gallery
            android:id="@+id/gallery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_seperator_padding"
            android:text="Basic Info"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/view_seperator_padding"
            android:layout_marginRight="@dimen/view_seperator_padding"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_unknown_animal" />

            <TextView
                android:id="@+id/animal_name"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textIsSelectable="true"
                tools:context=".AnimalDetailFragment" />

            <TextView
                android:id="@+id/animal_latin_name"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textIsSelectable="true"
                tools:context=".AnimalDetailFragment" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_seperator_padding"
            android:text="Season"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/view_seperator_padding"
            android:layout_marginRight="@dimen/view_seperator_padding"
            android:background="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/animal_season_legal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is in season" />

        <TextView
            android:id="@+id/animal_season_period"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:context=".AnimalDetailFragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_seperator_padding"
            android:text="Special Conditions"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/view_seperator_padding"
            android:layout_marginRight="@dimen/view_seperator_padding"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/animal_max_shot_distance"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:context=".AnimalDetailFragment" />

        <TextView
            android:id="@+id/animal_ammo_req"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:context=".AnimalDetailFragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_seperator_padding"
            android:text="Details"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/view_seperator_padding"
            android:layout_marginRight="@dimen/view_seperator_padding"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/animal_description"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:context=".AnimalDetailFragment" />

        <TextView
            android:id="@+id/animal_pictures"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:autoLink="web"
            android:clickable="true"
            android:onClick="morePictures"
            android:text="More pictures"
            tools:context=".AnimalDetailFragment" />



    </LinearLayout>

</ScrollView>